@using Microsoft.AspNetCore.Authentication
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <dl>
        @foreach (var claim in User.Claims)
        {
            <dt>@claim.Type</dt>
            <dd>@claim.Value</dd>
        }
    </dl>
    
    <h2>Properties</h2>
    
    <dl>
        @foreach (var prop in 
            (await Context.AuthenticateAsync()).Properties?.Items 
                              ?? new Dictionary<string, string?>())
        {
            <dt>@prop.Key</dt>
            <dd>@prop.Value</dd>
        }
        
    </dl>
    
</div>
